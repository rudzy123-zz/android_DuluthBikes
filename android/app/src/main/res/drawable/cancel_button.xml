<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="10dip" android:color="#5e7974" />
            <gradient android:angle="-90" android:startColor="#990000" android:endColor="#ccF50101"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#5e7974" />
            <solid android:color="#990000"/>
        </shape>
    </item>
    <item >
        <shape android:shape="oval"  >
            <corners android:radius="3dip" />
            <stroke android:width="5dip" android:color="#5e7974" />
            <gradient android:angle="-0" android:startColor="#caff0011" android:endColor="#aaff0004" />
        </shape>
    </item>
</selector>